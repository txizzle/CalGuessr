<div class="row">
  <div class="col-md-2 "></div>
  <div class="col-md-8 text-center dashboard">
    <h1 class="cal">Sign up</h1>

    <%= form_for(resource, :as => resource_name,
    :url => registration_path(resource_name),
    :html => { :role => "form" }) do |f| %>

    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :username %>
      <div class="row">
        <div class="col-md-3 "></div>
        <div class="col-sm-6">
          <%= f.text_field :username, :autofocus => true, class: "form-control" %>
        </div>
        <div class="col-md-3 "></div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-md-3 "></div>
        <div class="col-sm-6">
          <%= f.label :password %>
          <%= f.password_field :password, class: "form-control" %>
        </div>
        <div class="col-md-3 "></div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-md-3 "></div>
        <div class="col-sm-6">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, class: "form-control" %>
        </div>
        <div class="col-md-3 "></div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-3 "></div>
      <div class="col-sm-6">
        <%= f.submit "Sign up", class: "btn" %> <%= link_to "Cancel", dashboard_path, :class => "btn" %>
      </div>
      <div class="col-md-3 "></div>
    </div>
    <% end %>

  </div>
  <div class="col-md-2 "></div>
</div>
