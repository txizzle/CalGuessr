<p id="notice"><%= notice %></p>
<div class="row nolrmargin maintable-container">
  <div class="col-md-12 text-center">
    <h1 class="cal">All Games</h1>

    <table class="maintable">
      <thead>
        <tr>
          <th>ID</th>
          <th>User</th>
          <th>Name</th>
          <th>Date Created</th>
          <th>Score</th>
          <th>Progress</th>
          <th>Completed</th>
          <th colspan="3">Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @games.each do |game| %>
          <tr>
            <td><%= game.id %></td>
            <% if game.user %>
              <td><%= game.user.username %></td>
            <% else %>
              <td><%= "Anonymous" %></td>
            <% end %>
            <td><%= game.name %></td>
            <td><%= game.created %></td>
            <td><%= game.score %></td>
            <td><%= game.progress %></td>
            <td><%= game.completed %></td>
            <td><%= link_to 'Show', game %></td>
            <td><%= link_to 'Edit', edit_game_path(game) %></td>
            <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Game', new_game_path, :class => "btn" %>
    <%= link_to 'Home', home_path, :class => "btn" %>
  </div>
</div>
