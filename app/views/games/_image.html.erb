  $(document).ready(function() {
    $('#gameimage').each(function() {
        var maxWidth = $('#question-show').width();// Max width for the image
        var maxHeight = $(window).height()*.83;    // Max height for the image
        var ratio = 1.3338954468802697;
        if (maxWidth/maxHeight > 1.3338954468802697) {
            $(this).css("height", maxHeight); 
            $(this).css("width", maxHeight*ratio);
        }
        else {
            $(this).css("height", maxWidth/ratio); 
            $(this).css("width", maxWidth);
        }
        $(this).css('border', 'solid 2px #ffb819'); 
    });
  })
    
</script>

